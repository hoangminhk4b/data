<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="170dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:background="#f20"
    android:padding="5dp">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="20dp"
        app:cardCornerRadius="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:id="@+id/ivProduct"
                android:layout_width="wrap_content"
                android:layout_height="160dp"
                />
            <TextView
                android:id="@+id/tvNameProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivProduct"
                android:textSize="15sp"
                android:layout_centerHorizontal="true"/>
            <View
                android:id="@+id/vProduct"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/tvNameProduct"
                android:background="#9c9a9a"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price: "
                android:id="@+id/namePrice"
                android:textSize="20sp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/vProduct"
                android:paddingLeft="5dp"
                />
            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/namePrice"
                android:layout_alignParentBottom="true"
                android:paddingLeft="5dp"
                android:textSize="15sp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>